#include "setup.h"		//マイコンの設定

/********************************************************/
//  名前      
//		clock_init
//  概要
// 		CLOCK関数
//  機能説明
//		CLOCKの初期設定　
//  パラメタ説明
//		なし
//  戻り値
//		なし
//  作成者
//		K.Ishimori @ TUTrobo
//
/********************************************************/
void clock_init()	//クロックを変更
{
	
	CPG.FRQCR.BIT.IFC    = 1;       	// Iφ = 50MHz		内部クロック
    CPG.FRQCR.BIT.BFC    = 3;        	// Bφ = 25MHz		バスクロック
    CPG.FRQCR.BIT._PFC   = 3;        	// Pφ = 25MHz		周辺クロック
    CPG.FRQCR.BIT.MPFC   = 3;        	// MPφ = 25MHz		MTU2 クロック

}

